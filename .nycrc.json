{
  "all": true,
  "include": [
    "apps/**/*.js",
    "apps/**/*.ts", 
    "packages/**/*.js",
    "packages/**/*.ts",
    "services/**/*.js",
    "services/**/*.ts"
  ],
  "exclude": [
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.spec.js", 
    "**/*.spec.ts",
    "**/dist/**",
    "**/node_modules/**",
    "**/coverage/**",
    "**/*.d.ts",
    "**/jest.config.js",
    "**/vitest.config.ts",
    "**/.next/**",
    "**/build/**"
  ],
  "extension": [
    ".js",
    ".ts",
    ".tsx",
    ".jsx"
  ],
  "reporter": [
    "text",
    "html",
    "lcov",
    "json"
  ],
  "report-dir": "coverage",
  "temp-dir": ".nyc_output",
  "cache": true,
  "instrument": true,
  "sourceMap": true,
  "produceSourceMap": true,
  "check-coverage": false,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80
}
