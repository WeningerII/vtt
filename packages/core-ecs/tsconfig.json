{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "incremental": true,
    "tsBuildInfoFile": "./core-ecs.tsbuildinfo",
    "composite": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2020",
    "downlevelIteration": true,
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "baseUrl": ".",
    "paths": {
      "@vtt/logging": ["../logging/src/index"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [{ "path": "../logging" }]
}
