{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "jest",
      "node"
    ],
    "incremental": true,
    "tsBuildInfoFile": "./security.tsbuildinfo",
    "composite": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/__tests__",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}