{
  "extends": "../../tsconfig.base.json",
  "references": [
    {
      "path": "../rules-5e"
    },
    {
      "path": "../logging"
    }
  ],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "types": [
      "jest",
      "node"
    ],
    "skipLibCheck": true,
    "composite": true,
    "isolatedModules": false,
    "incremental": true,
    "tsBuildInfoFile": "./content-5e-srd.tsbuildinfo",
    "module": "ESNext",
    "target": "ES2020"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/__tests__/**/*",
    "src/UnifiedSpellSystem.ts",
    "src/SpellCollectionManager.ts",
    "src/SpellPhysicsIntegration.ts"
  ]
}