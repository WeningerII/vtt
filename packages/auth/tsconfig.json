{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node"
    ],
    "incremental": true,
    "tsBuildInfoFile": "./auth.tsbuildinfo",
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2020"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../user-management" },
    { "path": "../security" },
    { "path": "../logging" }
  ]
}