{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "types": [
      "jest",
      "node"
    ],
    "incremental": true,
    "tsBuildInfoFile": "./scene-management.tsbuildinfo",
    "composite": true
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../logging"
    }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/__tests__/**/*"
  ]
}