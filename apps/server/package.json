{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@vtt/server",
  "version": "0.0.0",
  "private": true,
  "description": "Authoritative simulation server for the VTT.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "pnpm --workspace-concurrency=1 -r --filter @vtt/ai run build && npm run clean",
    "postbuild": "cp -r prisma dist/",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "health": "curl -f http://localhost:8080/health || exit 1"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vtt/ai": "workspace:*",
    "@vtt/auth": "workspace:*",
    "@vtt/conditions-engine": "workspace:*",
    "@vtt/combat": "workspace:*",
    "@vtt/content-5e-srd": "workspace:*",
    "@vtt/core": "workspace:*",
    "@vtt/core-ecs": "workspace:*",
    "@vtt/core-schemas": "workspace:*",
    "@vtt/dice-engine": "workspace:*",
    "@vtt/logging": "workspace:*",
    "@vtt/performance": "workspace:*",
    "@vtt/physics": "workspace:*",
    "@vtt/spell-engine": "workspace:*",
    "@vtt/user-management": "workspace:*",
    "axios": "^1.12.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express-session": "^1.18.2",
    "js-yaml": "^4.1.0",
    "passport": "^0.7.0",
    "passport-discord-auth": "^1.2.0",
    "passport-google-oauth20": "^2.0.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/passport": "^1.0.17",
    "@types/passport-discord": "^0.1.14",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "prisma": "^6.15.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.4"
  }
}
