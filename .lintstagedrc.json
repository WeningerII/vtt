{
  "**/*.{js,jsx,ts,tsx}": [
    "prettier --write --cache",
    "eslint --fix --max-warnings=0 --cache"
  ],
  "**/*.{css,scss,less}": [
    "prettier --write --cache"
  ],
  "**/*.{md,mdx}": [
    "prettier --write --cache"
  ],
  "**/*.{json,yml,yaml}": [
    "prettier --write --cache"
  ],
  "apps/server/prisma/*.prisma": [
    "prisma format --schema apps/server/prisma/schema.prisma"
  ]
}
