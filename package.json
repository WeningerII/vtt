    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "puppeteer": "^24.18.0",
    "tsx": "^4.20.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zod": "^3.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "got@<11.8.5": ">=11.8.5",
      "semver-regex@<3.1.3": ">=3.1.3",
      "semver-regex@<3.1.4": ">=3.1.4",
      "happy-dom@<15.10.2": ">=15.10.2",
