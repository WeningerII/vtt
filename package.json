{
  "name": "vtt",
  "private": true,
  "version": "0.0.0",
  "description": "Skeleton for a modern virtual tabletop.",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "turbo run build",
    "test": "vitest run",
    "lint": "turbo run lint",
    "dev:server": "tsx apps/server/src/index.ts",
    "dev:bot": "tsx apps/bots/src/ws-smoke.ts",
    "dev:studio": "prisma studio --schema apps/server/prisma/schema.prisma --port 5555",
    "stack:up": "docker compose up -d",
    "stack:down": "docker compose down",
    "dev:spike": "tsx apps/server/src/spikeStatic.ts",
    "dev:sim": "tsx apps/server/src/simServer.ts"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "18",
    "@types/react-dom": "18",
    "eslint": "^8.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "tsx": "^4.20.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0",
    "zod": "^3.0.0"
  }
}