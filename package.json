{
  "name": "vtt",
  "private": true,
  "version": "0.0.0",
  "description": "Skeleton for a modern virtual tabletop.",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:ci": "turbo run test -- --coverage",
    "test:coverage": "./scripts/test-coverage.sh",
    "test:coverage:open": "./scripts/test-coverage.sh --open",
    "test:coverage:e2e": "./scripts/test-coverage.sh --e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "pnpm test && pnpm test:e2e",
    "coverage:merge": "node coverage.config.js",
    "lint": "eslint \"apps/**/src\" \"packages/**/src\" \"services/**/src\" --ext .ts,.tsx --no-error-on-unmatched-pattern",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "dev": "turbo run dev --parallel",
    "dev:server": "tsx apps/server/src/index.ts",
    "dev:client": "cd apps/client && pnpm dev",
    "dev:bot": "tsx apps/bots/src/ws-smoke.ts",
    "dev:studio": "prisma studio --schema apps/server/prisma/schema.prisma --port 5555",
    "stack:up": "docker compose up -d",
    "stack:down": "docker compose down",
    "dev:spike": "tsx apps/server/src/spikeStatic.ts",
    "dev:sim": "tsx apps/server/src/simServer.ts",
    "docs:api": "node scripts/serve-api-docs.js",
    "docs:api:port": "node scripts/serve-api-docs.js 8081",
    "monitor:health": "node scripts/health-monitor.js --config config/health-monitor.json",
    "monitor:health:once": "node scripts/health-monitor.js --config config/health-monitor.json --once",
    "monitor:up": "docker-compose -f infra/monitoring/docker-compose.monitoring.yml up -d",
    "monitor:down": "docker-compose -f infra/monitoring/docker-compose.monitoring.yml down",
    "monitor:logs": "docker-compose -f infra/monitoring/docker-compose.monitoring.yml logs -f",
    "db:gen": "pnpm dlx prisma generate --schema apps/server/prisma/schema.prisma",
    "db:migrate": "pnpm dlx prisma migrate dev --name init --schema apps/server/prisma/schema.prisma",
    "db:studio": "pnpm dlx prisma studio --schema apps/server/prisma/schema.prisma --port 5555",
    "todo:refresh": "node scripts/refresh-todo.js",
    "todo:refresh:dry": "node scripts/refresh-todo.js --dry",
    "test:low-memory": "jest --config jest.config.low-memory.js",
    "test:e2e:low-memory": "playwright test --config playwright.config.low-memory.ts",
    "build:sequential": "turbo run build --concurrency=1",
    "dev:light": "NODE_OPTIONS='--max-old-space-size=1024' pnpm dev:server",
    "scan:exhaustive": "node scripts/exhaustive-scanner.js"
  },
  "dependencies": {
    "@jest/globals": "^30.1.2",
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/auto-instrumentations-node": "^0.39.4",
    "@opentelemetry/sdk-node": "^0.204.0",
    "@prisma/client": "^6.15.0",
    "@tanstack/react-query": "^5.87.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jszip": "^3.4.0",
    "@types/passport": "^1.0.17",
    "@types/qrcode": "^1.5.5",
    "@types/redis": "^4.0.10",
    "@types/speakeasy": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "formidable": "^3.5.4",
    "gl-matrix": "^3.4.4",
    "google-auth-library": "^10.3.0",
    "helmet": "^7.1.0",
    "i18next": "^25.5.2",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.542.0",
    "msw": "^2.11.1",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
