{
  "name": "vtt",
  "private": true,
  "version": "0.0.0",
  "description": "Skeleton for a modern virtual tabletop.",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:ci": "turbo run test -- --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "pnpm test && pnpm test:e2e",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "dev:server": "tsx apps/server/src/index.ts",
    "dev:bot": "tsx apps/bots/src/ws-smoke.ts",
    "dev:studio": "prisma studio --schema apps/server/prisma/schema.prisma --port 5555",
    "stack:up": "docker compose up -d",
    "stack:down": "docker compose down",
    "dev:spike": "tsx apps/server/src/spikeStatic.ts",
    "dev:sim": "tsx apps/server/src/simServer.ts",
    "db:gen": "pnpm dlx prisma generate --schema apps/server/prisma/schema.prisma",
    "db:migrate": "pnpm dlx prisma migrate dev --name init --schema apps/server/prisma/schema.prisma",
    "db:studio": "pnpm dlx prisma studio --schema apps/server/prisma/schema.prisma --port 5555",
    "todo:refresh": "node scripts/refresh-todo.js",
    "todo:refresh:dry": "node scripts/refresh-todo.js --dry"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.6.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.0",
    "cors": "^2.8.5",
    "formidable": "^3.5.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.542.0",
    "qrcode": "^1.5.3",
    "rate-limiter-flexible": "^7.2.0",
    "socket.io-client": "^4.7.2",
    "speakeasy": "^2.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/chokidar": "^2.1.7",
    "@types/hapi__catbox": "^12.1.0",
    "@types/hapi__shot": "^6.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "tsx": "^4.20.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zod": "^3.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "got@<11.8.5": ">=11.8.5",
      "semver-regex@<3.1.3": ">=3.1.3",
      "semver-regex@<3.1.4": ">=3.1.4",
      "happy-dom@<15.10.2": ">=15.10.2",
      "http-cache-semantics@<4.1.1": ">=4.1.1",
      "cross-spawn@<6.0.6": ">=6.0.6"
    }
  },
  "//": {
    "unused-dependencies": {
      "note": "These dependencies were detected as unused in the audit",
      "date": "2025-08-28T03:16:33.494Z",
      "packages": []
    }
  }
}
